{
  "buildCommand": "npm --prefix client install --legacy-peer-deps && npm --prefix client run build",
  "outputDirectory": "client/dist",
  "installCommand": "npm install --legacy-peer-deps && npm --prefix server install --legacy-peer-deps",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
